<div class="container">
  <div class="row one">
    <div class="col-sm-2"></div>
    <div class="col-sm-4">
      <p class="flowerlist">Donate this flower!</p>
      <hr>
        {{#each flowers}}
        <li class="list-group-item flower-item">
          <span class="flowertext" >{{flower_name}}</span>
          <img id="flowerImg" src="{{imageurl_large}}" alt="flowers">
          <p>{{description}}</p>
        </li>
        <br>
        {{/each}}
    </div>
</div>